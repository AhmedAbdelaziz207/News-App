<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.newsDetails.NewsDetailsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appbar_shape"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/appbar_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News App"
                android:layout_gravity="center_horizontal"
                android:textSize="22sp"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu"
                android:layout_gravity="center_vertical"
                />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        tools:src="@drawable/sports"
/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BBC News"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Why are football's biggest clubs starting a new
tournament?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Why are football's biggest clubs starting a new
tournament?"
        android:textSize="14sp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/view_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Full Article >"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:layout_gravity="bottom|end"/>


</LinearLayout>